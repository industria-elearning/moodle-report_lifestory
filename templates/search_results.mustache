{{#students}}
<a href="{{baseurl}}?userid={{id}}"
   class="d-block p-2 text-decoration-none border-bottom search-item">
    <div class="d-flex align-items-center">
        {{#profileimageurl}}
            <img src="{{profileimageurl}}" alt="{{fullname}}"
                 class="rounded-circle me-3" width="40" height="40">
        {{/profileimageurl}}
