{{!
    @template report_student_life_story_ai/history_student

    Example context (json):
    {
    }
}}

<div class="mb-4 report_student_life_story_ai-form">
    <div class="d-flex align-items-center flex-wrap justify-content-between gap-3 report_student_life_story_ai-header">

        <div class="d-flex align-items-center flex-wrap gap-3 report_student_life_story_ai-actions">

            <div id="usersearch-wrapper" class="position-relative" style="min-width: 300px;">
                {{^selecteduser}}
                    <form method="get" action="{{baseurl}}" id="usersearchform">
                        <input type="text"
                               name="searchvalue"
                               id="usersearch"
                               class="form-control pe-4"
                               placeholder="{{#str}} searchusers, report_student_life_story_ai {{/str}}"
                               value="{{searchvalue}}"
                               autocomplete="off">

                        <div id="search-results"
                             class="position-absolute bg-white border rounded shadow-sm mt-1 w-100 d-none"
                             style="z-index: 1000; max-height: 300px; overflow-y: auto;">
                        </div>
                    </form>
                {{/selecteduser}}

                {{#selecteduser}}
                    <div class="d-flex align-items-center">
                        <input type="text"
                               class="form-control"
                               value="{{fullname}}"
                               readonly>
                        <a href="{{baseurl}}"
                           class="ms-2 text-primary text-decoration-underline"
                           style="white-space: nowrap;">
                            {{#str}} clearselection, report_student_life_story_ai {{/str}}
                        </a>
                    </div>
                {{/selecteduser}}
            </div>

            {{#hasuser}}
            <div class="d-flex align-items-center gap-2 ms-3 report_student_life_story_ai-actionbuttons">
                <a href="{{baseurl}}?userid={{userid}}&action=feedback"
                   class="btn btn-primary me-2"
                   id="btn-feedback-ai"
                   data-loader-text="{{#str}} generatingfeedback, report_student_life_story_ai {{/str}}">
                    {{#str}} generatefeedback, report_student_life_story_ai {{/str}}
                </a>
                <a href="{{baseurl}}?userid={{userid}}&action=csv"
                   class="btn btn-success"
                   id="btn-csv-export"
                   data-loader-text="{{#str}} exportingcsv, report_student_life_story_ai {{/str}}">
                    {{#str}} exportcsv, report_student_life_story_ai {{/str}}
                </a>
            </div>
            {{/hasuser}}
        </div>

        {{#hasuser}}
        {{#headerlogo}}
        <div class="d-flex align-items-center ms-auto report_student_life_story_ai-logo">
            <img src="{{logourl}}" alt="Logo Datacurso" class="report_student_life_story_ai-pluginlogo">
        </div>
        {{/headerlogo}}
        {{/hasuser}}
    </div>
</div>

{{^hasuser}}
<div class="alert alert-info report_student_life_story_ai-alert">
    {{#str}} selectuser, report_student_life_story_ai {{/str}}
</div>
{{/hasuser}}

{{#hasuser}}
    {{#showfeedback}}
    <div class="alert alert-info mb-4 p-3 report_student_life_story_ai-feedback">
        <h5 class="mb-3">{{#str}} feedbackfromai, report_student_life_story_ai {{/str}}</h5>
        <div class="bg-light p-3 rounded mb-0 report_student_life_story_ai-feedbackcontent">
            {{{feedback}}}
        </div>
    </div>
    {{/showfeedback}}

    {{#courses}}
    <div class="mb-5 report_student_life_story_ai-course">
        <h4 class="mb-3">{{fullname}}</h4>
        <div class="report-table border rounded p-3 bg-white shadow-sm">
            {{{reporthtml}}}
        </div>
    </div>
    {{/courses}}
{{/hasuser}}
